<h1>Listing Teachers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <!-- <th>Password digest</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teachers.each do |teacher| %>
      <tr>
        <td><%= teacher.email %></td>
        <!-- <td><%= teacher.password_digest %></td> -->
        <td><%= link_to 'Show', teacher %></td>
        <td><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
        <td><%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Teacher', new_teacher_path %>
<%= link_to 'Student Info', students_path %>
<%= link_to 'Grade Manager', new_grade_path %>
<%= link_to 'Assign Parent', new_parent_path %>
<%= link_to 'Log Out', logout_path, method: :delete if session[:user_id] %>

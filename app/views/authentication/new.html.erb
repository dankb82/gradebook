<h1>Please log in</h1>
<%= form_tag(login_path) do %>
  <%= radio_button_tag(:user_type, "Teacher") %>
  <%= label_tag(:user_type, "Teacher") %>
  <%= radio_button_tag(:user_type, "Student") %>
  <%= label_tag(:user_type, "Student") %>
  <%= radio_button_tag(:user_type, "Parent") %>
  <%= label_tag(:user_type, "Parent") %>
  <p><%= email_field_tag :email, nil, placeholder: "Email" %></p>
  <p><%= password_field_tag :password, nil, placeholder: "Password" %></p>
  <%= submit_tag %>

<% end %>
